<Window x:Class="WRK.AccountantEmployeesInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="EmployeesInfoWindow" Height="794.4" Width="1193">

    <Window.Resources>
        <Thickness x:Key="TxtBlkMrgn" Left="4" Top="2" Right="5" Bottom="0" />
        <sys:Double x:Key="TxtBlkHeight">14</sys:Double>
        <Thickness x:Key="TxtBxMrgn" Left="2" Top="1" Right="5" Bottom="0" />
        <sys:Double x:Key="TxtBxHeight">20</sys:Double>
        <sys:Double x:Key="ChkBxHeight">20</sys:Double>
        <Thickness x:Key="BigTxtBxMrgn" Left="4" Right="5" />
        <sys:Double x:Key="FntSizeB">20</sys:Double>
        <sys:Double x:Key="FntSizeS">18</sys:Double>

        <Style TargetType="{x:Type Grid}" x:Key="CntntGridStyle">
            <!--<Setter Property="Margin" Value="0,0,0,10" />-->
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="HdrTxtBlkStyle">
            <Setter Property="Margin" Value="2,2,5,0" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeB}" />
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="TxtBlkStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBlkMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="TxtBlkGrndBaStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBlkMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
        </Style>

        <Style TargetType="{x:Type TextBox}" x:Key="TxtBxStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskMbleStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="+38(000)00-00-000" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskPhneStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="000-00-00" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskYearStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="0000" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskDateStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="00.00.0000" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskDateTimeStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="00.00.0000 00:00" />
        </Style>

        <Style TargetType="{x:Type ComboBox}" x:Key="CmbBxStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="IsEditable" Value="True" />
        </Style>

        <Style TargetType="{x:Type CheckBox}" x:Key="ChkBxStyle">
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
        </Style>

        <Style TargetType="{x:Type RadioButton}" x:Key="RdBtnStyle">
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="BtnStyle">
            <Setter Property="Margin" Value="2,0,5,3" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Height" Value="Auto" />
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="MnBtnStyle">
            <Setter Property="Margin" Value="2,0,5,3" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Height" Value="Auto" />
        </Style>

        <Style TargetType="{x:Type DataGrid}" x:Key="DtGrdStyle">
            <Setter Property="Margin" Value="2,2,5,5" />
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="LblHdrStyle">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeB}" />
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="TbTmHdrStyle">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="TbTmStyle">
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
        </Style>

    </Window.Resources>

    <Grid>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Головна" Style="{StaticResource TbTmHdrStyle}" />
                </TabItem.Header>
                <Grid x:Name="TabMainMainGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" x:Name="TabMainTopGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="89*"/>
                            <ColumnDefinition Width="234*"/>
                            <ColumnDefinition Width="323*"/>
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="TabLeftGrid" Grid.Column="0" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                                <RowDefinition Height="*"/>

                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                                <RowDefinition Height="*"/>

                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                                <RowDefinition Height="*"/>

                            </Grid.RowDefinitions>

                            <!-- ФИО-данные -->

                            <TextBlock Grid.Row="0" Grid.Column="0" x:Name="TxtBlkSrNm" Text="Прізвище" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtBxSrNm" Style="{StaticResource TxtBxStyle}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="TxtBlkFrNm" Text="Ім'я" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtBxFrNm" Style="{StaticResource TxtBxStyle}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" x:Name="TxtBlkPtrnm" Text="По батькові" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="TxtBxPtrnm" Style="{StaticResource TxtBxStyle}" />

                            <TextBlock Grid.Row="3" Grid.Column="0" x:Name="TxtBlkSex" Text="Стать" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="3" Grid.Column="1" x:Name="CmbBxSex" Style="{StaticResource CmbBxStyle}"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" x:Name="TxtBlkBirth" Text="Дата народження" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="4" Grid.Column="1" x:Name="TxtBxBirth" Style="{StaticResource MskDateStyle}" />

                            <TextBlock Grid.Row="5" Grid.Column="0" x:Name="TxtBlkOld" Text="Вік" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="TxtBxOld" Style="{StaticResource TxtBxStyle}" />

                            <TextBlock Grid.Row="6" Grid.Column="0" x:Name="TxtBlkId" Text="Ідентефікаційний код" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="6" Grid.Column="1" x:Name="TxtBxId" Style="{StaticResource TxtBxStyle}" Mask="0000000000"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" x:Name="TxtBlkProf" Text="Основна професія" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="7" Grid.Column="1" x:Name="TxtBxProf" Style="{StaticResource TxtBxStyle}" />

                            <!-- Освіта -->

                            <TextBlock Grid.Row="9" Grid.Column="0" x:Name="TxtBlkEdu" Text="Рівень освіти" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="9" Grid.Column="1" x:Name="CmbBxEdu" Style="{StaticResource CmbBxStyle}"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" x:Name="TxtBlkEduPlc" Text="Місце навчання" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="10" Grid.Column="1" x:Name="CmbBxEduPlc" Style="{StaticResource CmbBxStyle}"/>

                            <TextBlock Grid.Row="11" Grid.Column="0" x:Name="TxtBlkEduY" Text="Рік отримання" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="11" Grid.Column="1" x:Name="TxtBxEduY" Style="{StaticResource MskYearStyle}"/>

                            <!-- Наука -->

                            <TextBlock Grid.Row="13" Grid.Column="0" x:Name="TxtBlkEduDgr" Text="Учений ступінь" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="13" Grid.Column="1" x:Name="CmbBxEduDgr" Style="{StaticResource CmbBxStyle}"/>

                            <TextBlock Grid.Row="14" Grid.Column="0" x:Name="TxtBlkEduRnk" Text="Наукове звання" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="14" Grid.Column="1" x:Name="CmbBxEduRnk" Style="{StaticResource CmbBxStyle}"/>

                        </Grid>

                        <Grid x:Name="TabRightGrid" Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                                <RowDefinition Height="*"/>

                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                                <RowDefinition Height="*"/>

                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                                <RowDefinition Height="*"/>

                                <RowDefinition Height="20*"/>

                                <RowDefinition Height="*"/>

                            </Grid.RowDefinitions>

                            <!-- Дата ППО -->

                            <TextBlock Grid.Row="0" Grid.Column="0" x:Name="TxtBlkNtrPDat" Text="Дата вступу в ППО" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="0" Grid.Column="1" x:Name="TxtBxNtrPDat" Style="{StaticResource MskDateStyle}" />

                            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="TxtBlkExtPDat" Text="Дата виходу з ППО" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="1" Grid.Column="1" x:Name="TxtBxExtPDat" Style="{StaticResource MskDateStyle}" />

                            <!-- Рік Ону -->

                            <TextBlock Grid.Row="3" Grid.Column="0" x:Name="TxtBlkNtrODat" Text="Рік початку роботи в ОНУ" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="3" Grid.Column="1" x:Name="TxtBxNtrODat" Style="{StaticResource MskYearStyle}" />

                            <TextBlock Grid.Row="4" Grid.Column="0" x:Name="TxtBlkExtODat" Text="Рік завершення роботи в ОНУ" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="4" Grid.Column="1" x:Name="TxtBxExtODat" Style="{StaticResource MskYearStyle}" />

                            <!-- Телефон -->

                            <TextBlock Grid.Row="6" Grid.Column="0" x:Name="TxtBlkMbNmb" Text="Мобільний номер" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="6" Grid.Column="1" x:Name="TxtBxMbNmb" Style="{StaticResource MskMbleStyle}" />

                            <TextBlock Grid.Row="7" Grid.Column="0" x:Name="TxtBlkCtyNmb" Text="Міський номер" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="7" Grid.Column="1" x:Name="TxtBxCtyNmb" Style="{StaticResource MskPhneStyle}" />

                            <!-- Примітка -->

                            <TextBlock Grid.Row="9" Grid.Column="0" x:Name="TxtBlkNote" Text="Примітка" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox x:Name="BigTxtBxNote" Grid.Row="9" Grid.Column="1" AcceptsReturn="True" TextWrapping="Wrap" Margin="{StaticResource BigTxtBxMrgn}" />

                        </Grid>

                        <GridSplitter Grid.Row="0" Grid.ColumnSpan="3" Height="3" HorizontalAlignment="Stretch" 
                                      VerticalAlignment="Bottom" IsTabStop="False" IsEnabled="False"/>
                        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3"
                                      HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>

                    </Grid>

                    <Grid Grid.Row="1" x:Name="TabMainBottomGrid">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="TxtBlkPos" Text="Посада" Style="{StaticResource TxtBlkStyle}"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtBxPos" Style="{StaticResource TxtBxStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" x:Name="TxtBlkStr" Text="Структурний підрозділ" Style="{StaticResource TxtBlkStyle}"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtBxStr" Style="{StaticResource TxtBxStyle}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" x:Name="TxtBlkKaf" Text="Кафедра" Style="{StaticResource TxtBlkStyle}"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="TxtBxKaf" Style="{StaticResource TxtBxStyle}"/>

                        <Button x:Name="b3" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Style="{StaticResource MnBtnStyle}" VerticalAlignment="Center">
                            <TextBlock Grid.Row="1" TextAlignment="Center" TextWrapping="Wrap">
                            Змінити дані
                            <LineBreak />
                            Співробітника
                            </TextBlock>
                        </Button>


                    </Grid>

                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Житло" Style="{StaticResource TbTmHdrStyle}" />
                </TabItem.Header>
                <TabControl>
                    <TabItem >
                        <TabItem.Header>
                            <TextBlock Text="Приватне житло" Style="{StaticResource TbTmStyle}" />
                        </TabItem.Header>
                        <Grid x:Name="TabPrvMainGrid" ShowGridLines="False">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid x:Name="TabPrvMainDprtmGrid" Grid.Column="0" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" x:Name="TxtBlkPrvDprtmID" Text="ID" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="1" x:Name="TxtBxPrvDprtmID" Style="{StaticResource TxtBxStyle}" IsEnabled="False"/>
                                <TextBlock Grid.Row="2" x:Name="TxtBlkPrvDprtmCty" Text="Місто" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="3" x:Name="TxtBxPrvDprtmCty" Style="{StaticResource TxtBxStyle}"/>
                                <TextBlock Grid.Row="4" x:Name="TxtBlkPrvDprtmStrt" Text="Вулиця" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="5" x:Name="TxtBxPrvDprtmStrt" Style="{StaticResource TxtBxStyle}"/>
                                <TextBlock Grid.Row="6" x:Name="TxtBlkPrvDprtmHmNb" Text="Номер дому" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="7" x:Name="TxtBxPrvDprtmHmNb" Style="{StaticResource TxtBxStyle}"/>
                                <TextBlock Grid.Row="8" x:Name="TxtBlkPrvDprtmApNb" Text="Номер квартири" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="9" x:Name="TxtBxPrvDprtmApNb" Style="{StaticResource TxtBxStyle}"/>

                                <Button Grid.Row="11" x:Name="BtnPrvDprtmAdd" Style="{StaticResource BtnStyle}">Додати</Button>
                                <Button Grid.Row="12" x:Name="BtnPrvDprtmUpd" Style="{StaticResource BtnStyle}">Оновити</Button>
                                <Button Grid.Row="14" x:Name="BtnPrvDprtmClr" Style="{StaticResource BtnStyle}">Очистити поля</Button>
                            </Grid>

                            <DataGrid x:Name="TabPrvMainDprtmData" Grid.Column="1" Grid.Row="1" 
                              Style="{StaticResource DtGrdStyle}"/>

                            <GridSplitter Grid.Row="0" Grid.ColumnSpan="6" Height="3" HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Bottom" IsTabStop="False" IsEnabled="False"/>
                            <GridSplitter Grid.Column="0" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>
                            <GridSplitter Grid.Column="1" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>
                            <GridSplitter Grid.Column="2" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>
                            <GridSplitter Grid.Column="3" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>
                            <GridSplitter Grid.Column="4" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>

                        </Grid>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <TextBlock Text="Надане університетом" Style="{StaticResource TbTmStyle}" />
                        </TabItem.Header>
                        <Grid x:Name="TabByUnMainGrid" ShowGridLines="False">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid x:Name="TabByUnMainDprtmGrid" Grid.Column="0" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" x:Name="TxtBlkByUnDprtmID" Text="ID" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="1" x:Name="TxtBxByUnDprtmID" Style="{StaticResource TxtBxStyle}" IsEnabled="False"/>
                                <TextBlock Grid.Row="2" x:Name="TxtBlkByUnDprtmCty" Text="Місто" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="3" x:Name="TxtBxByUnDprtmCty" Style="{StaticResource TxtBxStyle}"/>
                                <TextBlock Grid.Row="4" x:Name="TxtBlkByUnDprtmStrt" Text="Вулиця" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="5" x:Name="TxtBxByUnDprtmStrt" Style="{StaticResource TxtBxStyle}"/>
                                <TextBlock Grid.Row="6" x:Name="TxtBlkByUnDprtmHmNb" Text="Номер дому" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="7" x:Name="TxtBxByUnDprtmHmNb" Style="{StaticResource TxtBxStyle}"/>
                                <TextBlock Grid.Row="8" x:Name="TxtBlkByUnDprtmApNb" Text="Номер квартири" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Row="9" x:Name="TxtBxByUnDprtmApNb" Style="{StaticResource TxtBxStyle}"/>
                                <TextBlock Grid.Row="10" x:Name="TxtBlkByUnDprtmDate" Text="Дата отримання" Style="{StaticResource TxtBlkStyle}"/>
                                <xctk:MaskedTextBox Grid.Row="11" x:Name="TxtBxByUnDprtmDate" Style="{StaticResource MskDateStyle}" />

                                <Button Grid.Row="13" x:Name="BtnByUnDprtmAdd" Style="{StaticResource BtnStyle}">Додати</Button>
                                <Button Grid.Row="14" x:Name="BtnByUnDprtmUpd" Style="{StaticResource BtnStyle}">Оновити</Button>
                                <Button Grid.Row="16" x:Name="BtnByUnDprtmClr" Style="{StaticResource BtnStyle}">Очистити поля</Button>
                            </Grid>

                            <DataGrid x:Name="TabByUnMainDprtmData" Grid.Column="1" Grid.Row="1" 
                              Style="{StaticResource DtGrdStyle}"/>

                            <GridSplitter Grid.Row="0" Grid.ColumnSpan="6" Height="3" HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Bottom" IsTabStop="False" IsEnabled="False"/>
                            <GridSplitter Grid.Column="0" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>
                            <GridSplitter Grid.Column="1" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>
                            <GridSplitter Grid.Column="2" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>
                            <GridSplitter Grid.Column="3" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>
                            <GridSplitter Grid.Column="4" Grid.Row="1" ShowsPreview="False" Width="3"
        HorizontalAlignment="Right" VerticalAlignment="Stretch" IsTabStop="False"/>

                        </Grid>
                    </TabItem>

                    <TabItem >
                        <TabItem.Header>
                            <TextBlock Text="Відомче" Style="{StaticResource TbTmStyle}" />
                        </TabItem.Header>
                        <Grid x:Name="TabDprtMainGrid" ShowGridLines="False">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3*"/>
