<Window x:Class="WRK.AccountantMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="1193.525" Width="1849">

    <!-- Ресурсы проекта, типа переменные и вот это вот всё -->
    <Window.Resources>
        <Thickness x:Key="TxtBlkMrgn" Left="4" Top="2" Right="5" Bottom="0" />
        <sys:Double x:Key="TxtBlkHeight">14</sys:Double>
        <Thickness x:Key="TxtBxMrgn" Left="2" Top="1" Right="5" Bottom="0" />
        <sys:Double x:Key="TxtBxHeight">20</sys:Double>
        <sys:Double x:Key="ChkBxHeight">20</sys:Double>
        <Thickness x:Key="BigTxtBxMrgn" Left="4" Right="5" />
        <sys:Double x:Key="FntSizeB">20</sys:Double>
        <sys:Double x:Key="FntSizeS">18</sys:Double>

        <Style TargetType="{x:Type Grid}" x:Key="CntntGridStyle">
            <!--<Setter Property="Margin" Value="0,0,0,10" />-->
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="HdrTxtBlkStyle">
            <Setter Property="Margin" Value="2,2,5,0" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeB}" />
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="SrcHdrTxtBlkStyle">
            <Setter Property="Margin" Value="2,2,5,0" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeB}" />
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="TxtBlkStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBlkMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="TxtBlkGrndBaStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBlkMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
        </Style>

        <Style TargetType="{x:Type TextBox}" x:Key="TxtBxStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskMbleStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="+38(000)00-00-000" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskPhneStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="000-00-00" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskYearStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="0000" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskDateStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="00.00.0000" />
        </Style>

        <Style TargetType="{x:Type xctk:MaskedTextBox}" x:Key="MskDateTimeStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Mask" Value="00.00.0000 00:00" />
        </Style>

        <Style TargetType="{x:Type ComboBox}" x:Key="CmbBxStyle">
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="IsEditable" Value="True" />
        </Style>

        <Style TargetType="{x:Type CheckBox}" x:Key="ChkBxStyle">
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Margin" Value="{StaticResource TxtBxMrgn}" />
        </Style>

        <Style TargetType="{x:Type RadioButton}" x:Key="RdBtnStyle">
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="BtnStyle">
            <Setter Property="Margin" Value="2,0,5,3" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Height" Value="Auto" />
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="MnBtnStyle">
            <Setter Property="Margin" Value="2,0,5,3" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeS}" />
            <Setter Property="Height" Value="Auto" />
        </Style>

        <Style TargetType="{x:Type DataGrid}" x:Key="DtGrdStyle">
            <Setter Property="Margin" Value="2,2,5,5" />
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="LblHdrStyle">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="{StaticResource FntSizeB}" />
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="TbTmHdrStyle">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style TargetType="{x:Type TabItem}" x:Key="TabCLStyle">
            <!-- <Setter Property="Visibility" Value="Collapsed" />-->
        </Style>

    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- Главный таб контрол-->
        <TabControl Grid.Column="1" x:Name="MainTabControl" BorderThickness="0">
            <!-- Вкладка добавление сотрудника -->
            <TabItem Header="Додати співробітника" Style="{StaticResource TabCLStyle}">
                <Grid x:Name="TabAddWrkrMainGrid" ShowGridLines="False">

                    <!-- Разделение на три основных грида колонны -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!-- Левый грид колонна -->
                    <Grid x:Name="TabAddWrkrMainLGrid" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <!-- Грид примечания расстягивается, все остальны константны -->
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ФИО-данные -->
                        <Grid x:Name="FIOGrid" Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="1" x:Name="TxtBlkSrNm" Text="Прізвище" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="2" x:Name="TxtBxSrNm" Style="{StaticResource TxtBxStyle}"/>
                            <TextBlock Grid.Row="3" x:Name="TxtBlkFrNm" Text="Ім'я" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="4" x:Name="TxtBxFrNm" Style="{StaticResource TxtBxStyle}" />
                            <TextBlock Grid.Row="5" x:Name="TxtBlkPtrnm" Text="По батькові" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="6" x:Name="TxtBxPtrnm" Style="{StaticResource TxtBxStyle}" />
                            <TextBlock Grid.Row="7" x:Name="TxtBlkSex" Text="Стать" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="8" x:Name="CmbBxSex"  Style="{StaticResource CmbBxStyle}"/>
                            <TextBlock Grid.Row="9" x:Name="TxtBlkBirth" Text="Дата народження" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="10" x:Name="TxtBxBirth" Style="{StaticResource MskDateStyle}" />
                            <TextBlock Grid.Row="11" x:Name="TxtBlkId" Text="Ідентефікаційний код" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="12" x:Name="TxtBxId" Style="{StaticResource TxtBxStyle}" Mask="0000000000"/>
                            <TextBlock Grid.Row="13" x:Name="TxtBlkProf" Text="Професія за дипломом" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="14" x:Name="TxtBxProf" Style="{StaticResource TxtBxStyle}" />
                            <TextBlock Grid.Row="15" x:Name="TxtBlkYrWrk" Text="Рік початку роботи в ОНУ" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="16" x:Name="TxtBxYrWrk" Style="{StaticResource MskYearStyle}" />
                            <TextBlock Grid.Row="17" x:Name="TxtBlkDtNtr" Text="Дата вступу в ППО" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="18" x:Name="TxtBxDtNtr"  Style="{StaticResource MskDateStyle}" />
                            <TextBlock Grid.Row="19" x:Name="TxtBlkMPhn" Text="Мобільний номер" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="20" x:Name="TxtBxMPhn" Style="{StaticResource MskMbleStyle}" />
                            <TextBlock Grid.Row="21" x:Name="TxtBlkCPhn" Text="Міський номер" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="22" x:Name="TxtBxCPhn" Style="{StaticResource MskPhneStyle}" />
                        </Grid>
                        <!-- Чекбоксы -->
                        <Grid x:Name="ChckbxGrid" Grid.Row="1" Margin="5,0,5,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <CheckBox Grid.Column="0"  Grid.Row="0" x:Name="ChkBxQlf" Content="Кваліфікація" Style="{StaticResource ChkBxStyle}" />
                            <CheckBox Grid.Column="1"  Grid.Row="0" x:Name="ChkBxPubPos" Content="Громадська посада" Style="{StaticResource ChkBxStyle}"/>
                            <CheckBox Grid.Column="0"  Grid.Row="1" x:Name="ChkBxPrvlg" Content="Пільга" Style="{StaticResource ChkBxStyle}"/>
                            <CheckBox Grid.Column="1"  Grid.Row="1" x:Name="ChkBxPrvAc" Content="Приватне житло" Style="{StaticResource ChkBxStyle}"/>
                            <CheckBox Grid.Column="0"  Grid.Row="2" x:Name="ChkBxFUniv" Content="Від університету" Style="{StaticResource ChkBxStyle}"/>
                            <CheckBox Grid.Column="1"  Grid.Row="2" x:Name="ChkBxHstl" Content="Гуртожиток" Style="{StaticResource ChkBxStyle}"/>
                            <CheckBox Grid.Column="0"  Grid.Row="3" x:Name="ChkBxDprt" Content="Відомче" Style="{StaticResource ChkBxStyle}"/>
                        </Grid>
                        <!-- Примечание -->
                        <Grid x:Name="NoteGrid" Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="TxtBlkNote" Grid.Row="0" Text="Примітка" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox x:Name="BigTxtBxNote" Grid.Row="1" AcceptsReturn="True" TextWrapping="Wrap" Margin="{StaticResource BigTxtBxMrgn}" />
                        </Grid>
                        <!-- Кнопочка -->
                        <Grid x:Name="AddBGrid" Grid.Row="3">
                            <Button Style="{StaticResource BtnStyle}">Додати співробітника</Button>
                        </Grid>
                    </Grid>

                    <!-- Средний грид колонна -->
                    <Grid x:Name="TabAddWrkrMainCGrid" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="9*"/>
                            <RowDefinition Height="9*"/>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="9*"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="EducGrid" Grid.Row="0" Style="{StaticResource CntntGridStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="TxtBlkEducation" Text="Освіта" Style="{StaticResource HdrTxtBlkStyle}"/>
                            <TextBlock Grid.Row="1" x:Name="TxtBlkEdLvl" Text="Рівень освіти" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="2" x:Name="CmbBxEdLvl" Style="{StaticResource CmbBxStyle}"/>
                            <TextBlock Grid.Row="3" x:Name="TxtBlkEdPlc" Text="Місце навчання" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="4" x:Name="CmbBxEdPlc" Style="{StaticResource CmbBxStyle}"/>
                            <TextBlock Grid.Row="5" x:Name="TxtBlkEdYe" Text="Рік отримання" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="6" x:Name="TxtBxEdYe" Style="{StaticResource MskYearStyle}" />
                        </Grid>
                        <Grid x:Name="StructGrid" Grid.Row="1" Style="{StaticResource CntntGridStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="TxtBlkStructure" Text="Структурний підрозділ\Посада" Style="{StaticResource HdrTxtBlkStyle}"/>
                            <TextBlock Grid.Row="1" x:Name="TxtBlkStrkU" Text="Структурний підрозділ" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="2" x:Name="CmbBxStrkU" Style="{StaticResource CmbBxStyle}"/>
                            <TextBlock Grid.Row="3" x:Name="TxtBlkCha" Text="Кафедра" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="4" x:Name="CmbBxCha" Style="{StaticResource CmbBxStyle}"/>
                            <TextBlock Grid.Row="5" x:Name="TxtBlkTitle" Text="Назва посади" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="6" x:Name="CmbBxTitle" Style="{StaticResource CmbBxStyle}"/>
                            <TextBlock Grid.Row="7" x:Name="TxtBlkTitleYe" Text="З якого року на посаді" Style="{StaticResource TxtBlkStyle}"/>
                            <xctk:MaskedTextBox Grid.Row="8" x:Name="TxtBxTitleYe" Style="{StaticResource MskYearStyle}" />
                        </Grid>
                        <Grid x:Name="QualGrid" Grid.Row="2" Style="{StaticResource CntntGridStyle}"
                              IsEnabled="{Binding ElementName=ChkBxQlf, Path=IsChecked, TargetNullValue=false}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="TxtBlkQualification" Text="Кваліфікація" Style="{StaticResource HdrTxtBlkStyle}"/>
                            <TextBlock Grid.Row="1" x:Name="TxtBlkAcdmDgr" Text="Учений ступінь" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="2" x:Name="CmbBxAcdmDgr" Style="{StaticResource CmbBxStyle}"/>
                            <TextBlock Grid.Row="3" x:Name="TxtBlkScntRnk" Text="Наукове звання" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="4" x:Name="CmbBxScntRnk" Style="{StaticResource CmbBxStyle}"/>
                        </Grid>
                        <Grid x:Name="PublPosGrid" Grid.Row="3" Style="{StaticResource CntntGridStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="TxtBlkPublPos" Text="Громадська посада\Пільга" Style="{StaticResource HdrTxtBlkStyle}"/>
                            <TextBlock Grid.Row="1" x:Name="TxtBlkPblPsNme" Text="Назва громадської посади" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="2" x:Name="TxtBxPblPsNme" Style="{StaticResource CmbBxStyle}" IsEnabled="{Binding ElementName=ChkBxPubPos, Path=IsChecked, TargetNullValue=false}"/>
                            <TextBlock Grid.Row="3" x:Name="TxtBlkPblPsNte" Text="Примітка громадської посади" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="4" x:Name="TxtBxPblPsNte" Style="{StaticResource TxtBxStyle}" IsEnabled="{Binding ElementName=ChkBxPubPos, Path=IsChecked, TargetNullValue=false}"/>
                            <TextBlock Grid.Row="5" x:Name="TxtBlkPrvlgNme" Text="Назва пільги" Style="{StaticResource TxtBlkStyle}"/>
                            <ComboBox Grid.Row="6" x:Name="TxtBxPrvlgNme" Style="{StaticResource CmbBxStyle}" IsEnabled="{Binding ElementName=ChkBxPrvlg, Path=IsChecked, TargetNullValue=false}"/>
                            <TextBlock Grid.Row="7" x:Name="TxtBlkPrvlgNte" Text="Примітка пільги" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="8" x:Name="TxtBxPrvlgNte" Style="{StaticResource TxtBxStyle}" IsEnabled="{Binding ElementName=ChkBxPrvlg, Path=IsChecked, TargetNullValue=false}"/>
                        </Grid>

                        <GridSplitter Grid.Row="0" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" IsTabStop="False" />
                        <GridSplitter Grid.Row="1" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" IsTabStop="False"/>
                        <GridSplitter Grid.Row="2" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" IsTabStop="False"/>
                    </Grid>

                    <!-- Правый грид колонна -->
                    <Grid x:Name="TabAddWrkrMainRGrid" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="9*"/>
                            <RowDefinition Height="9*"/>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="9*"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="PrvtHmGrid" Grid.Row="0" Style="{StaticResource CntntGridStyle}" 
                              IsEnabled="{Binding ElementName=ChkBxPrvAc, Path=IsChecked, TargetNullValue=false}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="TxtBlkPrvHome" Text="Приватне житло" Style="{StaticResource HdrTxtBlkStyle}" />
                            <TextBlock Grid.Row="1" x:Name="TxtBlkHmCty" Text="Місто" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="2" x:Name="TxtBxHmCty" Style="{StaticResource TxtBxStyle}"/>
                            <TextBlock Grid.Row="3" x:Name="TxtBlkHmStrt" Text="Вулиця" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="4" x:Name="TxtBxHmStrt" Style="{StaticResource TxtBxStyle}"/>
                            <TextBlock Grid.Row="5" x:Name="TxtBlkHmNmbr" Text="Номер дому" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="6" x:Name="TxtBxHmNmbr" Style="{StaticResource TxtBxStyle}"/>
                            <TextBlock Grid.Row="7" x:Name="TxtBlkApNmbr" Text="Номер квартири" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="8" x:Name="TxtBxApNmbr" Style="{StaticResource TxtBxStyle}"/>
                        </Grid>
                        <Grid x:Name="ByUnivGrid" Grid.Row="1" Style="{StaticResource CntntGridStyle}" 
                              IsEnabled="{Binding ElementName=ChkBxFUniv, Path=IsChecked, TargetNullValue=false}" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="TxtBlkBU" Text="Від університету" Style="{StaticResource HdrTxtBlkStyle}"/>
                            <TextBlock Grid.Row="1" x:Name="TxtBlkBUHmCty" Text="Місто" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="2" x:Name="TxtBxBUHmCty" Style="{StaticResource TxtBxStyle}" />
                            <TextBlock Grid.Row="3" x:Name="TxtBlkBUHmStrt" Text="Вулиця" Style="{StaticResource TxtBlkStyle}"/>
                            <TextBox Grid.Row="4" x:Name="TxtBxBUHmStrt" Style="{StaticResource TxtBxStyle}" />
                            <Grid Grid.Row="5"  x:Name="ByUnivNumbersGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" x:Name="TxtBlkBUHmNmbr" Text="Номер дому" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Column="0" Grid.Row="1" x:Name="TxtBxBUHmNmbr" Style="{StaticResource TxtBxStyle}" />
                                <TextBlock Grid.Column="1" Grid.Row="0" x:Name="TxtBlkBUApNmbr" Text="Номер квартири" Style="{StaticResource TxtBlkStyle}"/>
                                <TextBox Grid.Column="1" Grid.Row="1" x:Name="TxtBxBUApNmbr" Style="{StaticResource TxtBxStyle}" />

                            </Grid>
                            <TextBlock Grid.Row="6" x:Name="TxtBlkBUDate" Text="Дата розподілу" Style="{StaticResource TxtBlkStyle}"/>
